<!DOCTYPE html>
<html lang="<%= lang %>" dir="<%= lang_dir %>">
  <head>
    <meta charset="utf-8">
    <title><%= gettext("Accounts don't match") %></title>
    <meta name="viewport" content="initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <!--[if lt IE 9]>
        <%- cachify_js('/js/lib/html5shim.min.js') %>
  <![endif]-->

  <%- cachify_css('/css/style.min.css') %>
  </head>

  <body class="error">
    <header id="header">
       <h1><a class="home" target="_blank" href="/">Mozilla Persona Home</a></h1>
    </header>

    <div id="content" class="group">
      <section id="error">
        <div class="table">
            <div class="vertical">
                <div id="auth_error" class="contents">

                    <h2><%= gettext("Accounts don't match") %></h2>
                    <p><%= format(gettext("It looks like you were trying to log in with %(claimed)s but were actually logged in with %(other)s. We can link these email addresses to enable you to sign in."),
                             { claimed: claimed, other: mismatched }) %></p>
                    <button class="cancel"><%= gettext("Cancel") %></button>
                    <button class="js-continue continue"><%= gettext("Verify Email") %></button>
                    <input type="hidden" name="csrf_token" value="<%= csrf_token %>" />

                </div><!-- :contents -->
                <div id="pin_code_prompt" class="contents" style="display: none;">
                  <h2><%= gettext("Confirm your email address") %></h2>
                  <p><%= format(gettext("Check your email at %(claimed)s."),
                           { claimed: claimed }) %></p>
                  <div>
                    <form action="#" method="POST" id="check-pin">
                      <label for="pin1">Please enter PIN from email:</label>
		      <p id="check-pin-error"><%= gettext("Sorry, PIN doesn't match") %></p>
                      <input id="pin1" data-next="pin2" class="autofocus" name="pin1" size="3" maxlength="3" value="" /> -
                      <input name="pin2" data-next="pin3" class="autofocus" size="1" maxlength="1" value="" /> -
                      <input name="pin3" size="3" maxlength="3" value="" /></div>
                      <button class="continue">Continue</button>
                    </form>
                </div>
            </div>
        </div>
      </section>
    </div>
    <% if ('development' === dev_mode) { %>
      <%- partial('debug_authentication_api') -%>
    <% } else { %>
      <script src="<%= browserid_server %>/authentication_api.js"></script>
    <% } %>
    <%- cachify_js('/js/lib/jquery.min.js') %>
    <%- cachify_js('/js/error.min.js') %>
  </body>
</html>
